{
  "compilerOptions": {
    /* 基本設定 */
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    /* 型チェックの厳格化設定 */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    /* モジュール関連 */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* パスエイリアス設定 */
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Next.js 向け設定 */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".storybook", "coverage"]
}

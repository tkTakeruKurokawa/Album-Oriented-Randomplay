#!/usr/bin/env bash
# Husky v9+向けの最新フォーマット

echo "🔍 Running pre-commit checks..."

# TypeScript型チェック
echo "📝 TypeScript type checking..."
npx tsc --noEmit

# lint-stagedを実行（ESLint、Stylelint、Prettier）
echo "🧹 Running linters and formatters..."
npx lint-staged

echo "✅ Pre-commit checks completed successfully!"